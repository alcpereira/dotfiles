[includeIf "gitdir:~/Work/"]
path = ~/Work/.gitconfig

[includeIf "gitdir:~/Personal/"]
path = ~/Personal/.gitconfig

[includeIf "gitdir:~/dotfiles/"]
path = ~/Personal/.gitconfig

[core]
	autocrlf = false
	editor = nvim
	pager = delta

[push]
	autoSetupRemote = true
	default = current

[pull]
	rebase = true

[init]
	defaultBranch = main

[rerere]
	enabled = true

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictStyle = zdiff3
