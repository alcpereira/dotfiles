[includeIf "gitdir:~/Work/"]
path = ~/Work/.gitconfig

[includeIf "gitdir:~/Personal/"]
path = ~/Personal/.gitconfig

[includeIf "gitdir:~/dotfiles/"]
path = ~/Personal/.gitconfig

[core]
	autocrlf = false
	editor = nvim

[push]
	autoSetupRemote = true
	default = current

[pull]
	rebase = true

[init]
	defaultBranch = main

[rerere]
	enabled = true
